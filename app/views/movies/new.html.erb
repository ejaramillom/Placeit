<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Publicar pelicula</h1>
      <%= form_for @movie do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre de la película" %>
        </div>
        <div class="form-group">
          <%= f.url_field :url, class: "form-control input-lg", placeholder: "Ingresa la URL del poster" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripción de la película" %>
        </div>
        <div class="form-group">
          <%= f.text_area :date, class: "form-control input-lg", placeholder: "Ingresa la fecha de lanzamiento" %>
        </div>
        <div>
          <%= f.submit "Publicar película", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
